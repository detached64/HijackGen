<Window x:Class="HijackGen.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="clr-namespace:HijackGen.Strings"
        xmlns:vm="clr-namespace:HijackGen.ViewModels"
        Title="HijackGen"
        Width="1200"
        Height="800"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        AllowDrop="True"
        Background="#FFF0F0F0"
        DragEnter="Window_DragOver"
        DragOver="Window_DragOver"
        Drop="Window_Drop"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{x:Static s:GuiStrings.Tools}">
                <MenuItem Command="{Binding OpenRegistryKnownDllsCommand}" Header="{x:Static s:GuiStrings.CheckKnownDlls}" />
            </MenuItem>
            <MenuItem Command="{Binding ShowAboutCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                      Header="{x:Static s:GuiStrings.About}" />
        </Menu>
        <DockPanel Margin="15" DockPanel.Dock="Top">
            <GroupBox Margin="0,0,0,5"
                      Padding="5"
                      DockPanel.Dock="Top"
                      Header="{x:Static s:GuiStrings.Path}">
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtFilePath"
                             Grid.Column="0"
                             Margin="0,0,5,0"
                             VerticalContentAlignment="Center"
                             AllowDrop="True"
                             DockPanel.Dock="Left"
                             PreviewDragEnter="Window_DragOver"
                             PreviewDragOver="Window_DragOver"
                             PreviewDrop="Window_Drop"
                             Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />
                    <Button Grid.Column="1"
                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                            VerticalAlignment="Center"
                            Command="{Binding OpenFileCommand}"
                            Content="â€¦"
                            DockPanel.Dock="Right" />
                </Grid>
            </GroupBox>
            <GroupBox Margin="0,5"
                      Padding="5"
                      DockPanel.Dock="Top"
                      Header="{x:Static s:GuiStrings.PeInfo}">
                <TextBlock Text="{Binding PeInfo}" TextWrapping="Wrap" />
            </GroupBox>
            <StackPanel Margin="0,5" DockPanel.Dock="Bottom">
                <Button Command="{Binding GenerateCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                        Content="{x:Static s:GuiStrings.Generate}" />
            </StackPanel>
            <Grid Margin="0,5" DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <GroupBox Margin="0,0,0,5"
                          Padding="5"
                          DockPanel.Dock="Top"
                          Header="{x:Static s:GuiStrings.ImportInfos}">
                    <DockPanel>
                        <TextBox Margin="0,5,0,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalContentAlignment="Center"
                                 DockPanel.Dock="Bottom"
                                 Text="{Binding ImportSearchText, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGrid AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  ClipboardCopyMode="IncludeHeader"
                                  DockPanel.Dock="Top"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding ImportSearchedInfos}"
                                  RowHeaderWidth="0"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding DllName}"
                                                    Header="{x:Static s:GuiStrings.DllName}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Hint}"
                                                    Header="{x:Static s:GuiStrings.Hint}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding IATOffset, StringFormat=X}"
                                                    Header="{x:Static s:GuiStrings.IATOffset}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Name}"
                                                    Header="{x:Static s:GuiStrings.Name}" />
                            </DataGrid.Columns>
                            <DataGrid.HorizontalGridLinesBrush>
                                <SolidColorBrush Opacity="0.6" Color="Gray" />
                            </DataGrid.HorizontalGridLinesBrush>
                            <DataGrid.VerticalGridLinesBrush>
                                <SolidColorBrush Opacity="0.6" Color="Gray" />
                            </DataGrid.VerticalGridLinesBrush>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
                <GroupBox Grid.Row="1"
                          Margin="0,5,0,0"
                          Padding="5"
                          DockPanel.Dock="Top"
                          Header="{x:Static s:GuiStrings.ExportInfos}">
                    <DockPanel>
                        <TextBox Margin="0,5,0,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalContentAlignment="Center"
                                 DockPanel.Dock="Bottom"
                                 Text="{Binding ExportSearchText, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGrid AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  ClipboardCopyMode="IncludeHeader"
                                  DockPanel.Dock="Top"
                                  EnableColumnVirtualization="True"
                                  EnableRowVirtualization="True"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding ExportSearchedInfos}"
                                  RowHeaderWidth="0"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Ordinal}"
                                                    Header="{x:Static s:GuiStrings.Ordinal}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Address, StringFormat=X}"
                                                    Header="{x:Static s:GuiStrings.Address}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Name}"
                                                    Header="{x:Static s:GuiStrings.Name}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding HasForward}"
                                                    Header="{x:Static s:GuiStrings.HasForward}" />
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding ForwardName}"
                                                    Header="{x:Static s:GuiStrings.ForwardName}" />
                            </DataGrid.Columns>
                            <DataGrid.HorizontalGridLinesBrush>
                                <SolidColorBrush Opacity="0.6" Color="Gray" />
                            </DataGrid.HorizontalGridLinesBrush>
                            <DataGrid.VerticalGridLinesBrush>
                                <SolidColorBrush Opacity="0.6" Color="Gray" />
                            </DataGrid.VerticalGridLinesBrush>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
