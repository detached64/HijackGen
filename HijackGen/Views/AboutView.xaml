<Window x:Class="HijackGen.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="clr-namespace:HijackGen.Strings"
        xmlns:vm="clr-namespace:HijackGen.ViewModels"
        Title="About"
        Width="250"
        Height="220"
        Background="#FFF0F0F0"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">

    <Window.DataContext>
        <vm:AboutViewModel />
    </Window.DataContext>

    <StackPanel Margin="20">
        <TextBlock x:Name="TxtName"
                   Margin="10"
                   Text="{Binding Name}" />
        <TextBlock x:Name="TxtLicense"
                   Margin="10"
                   Text="MIT License" />
        <TextBlock x:Name="TxtCopyright"
                   Margin="10"
                   Text="{Binding Copyright}" />
        <TextBlock x:Name="TxtLink" Margin="10">
            <Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="https://github.com/detached64/HijackGen">
                <TextBlock Text="{x:Static s:GUIStrings.TxtDevSite}" />
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
